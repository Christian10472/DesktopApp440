<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="edu.csun.desktopapp440.controllers.HomePageController">
   <children>
      <Button layoutX="520.0"
              layoutY="20.0"
              mnemonicParsing="false"
              onAction="#onLogOutButtonClick"
              text="Log Out" />
      <Label layoutX="191.0"
             layoutY="20.0"
             prefHeight="31.0"
             prefWidth="216.0"
             text="Welcome">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <ScrollPane layoutX="10.0"
                  layoutY="121.0"
                  prefHeight="203.0"
                  prefWidth="575.0">
         <content>
            <ListView fx:id="userSearchListView"
                      prefHeight="203.0"
                      prefWidth="575.0"
                      style="-fx-font-family: 'monospace';" />
         </content>
      </ScrollPane>
      <ComboBox fx:id="searchDropDown"
                layoutX="10.0"
                layoutY="85.0"
                promptText="Category"
                prefHeight="25.0"
                prefWidth="100">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Category"/>
               <String fx:value="Item"/>
               <String fx:value="User"/>
            </FXCollections>
         </items>
      </ComboBox>
      <TextField fx:id="searchField"
                 layoutX="124.0"
                 layoutY="85.0"
                 onKeyPressed="#onSearchEvent"
                 onAction="#getUserSearch"
                 promptText="Search"
                 prefHeight="25.0"
                 prefWidth="285.0" />
      <Button fx:id="searchButton"
              layoutX="415.0"
              layoutY="85.0"
              mnemonicParsing="false"
              onAction="#onSearchClick"
              prefHeight="25.0"
              prefWidth="61.0"
              text="Search" />
      <Button fx:id="advanceSearch"
              layoutX="480.0"
              layoutY="85.0"
              mnemonicParsing="false"
              prefHeight="25.0"
              prefWidth="100.0"
              text="Advance Search" />
      <Button fx:id="addItemButton"
              layoutX="520.0"
              layoutY="356.0"
              mnemonicParsing="false"
              onAction="#onAddItemButtonClick"
              text="Add Item" />
      <Button fx:id="initializeDatabaseButton"
              layoutX="14.0"
              layoutY="356.0"
              mnemonicParsing="false"
              text="Initalize Database"
              onAction="#onInitializeDatabaseButtonClick" />
      <Label fx:id="statusLabel"
             graphicTextGap="0.0"
             layoutX="134.0"
             layoutY="351.0"
             prefHeight="38.0"
             prefWidth="304.0"/>
   </children>
</AnchorPane>
